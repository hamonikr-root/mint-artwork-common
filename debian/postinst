#!/bin/sh
# postinst script 
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in    
    configure|upgrade|update|reconfigure)	
	if [ -d /etc/skel/.opera ]; then
		rm -rf /etc/skel/.opera
	fi
	update-alternatives \
		--install /lib/plymouth/themes/default.plymouth default.plymouth \
		/lib/plymouth/themes/mint-logo/mint-logo.plymouth 200

	update-alternatives \
		--install /lib/plymouth/themes/default.plymouth default.plymouth \
		/lib/plymouth/themes/no-logo/no-logo.plymouth 150

	update-alternatives \
		--install /lib/plymouth/themes/text.plymouth text.plymouth \
		/lib/plymouth/themes/mint-text/mint-text.plymouth 200

	update-alternatives \
		--install /lib/plymouth/themes/text.plymouth text.plymouth \
		/lib/plymouth/themes/no-text/no-text.plymouth 150

	if which update-initramfs >/dev/null 2>&1
	then
	    update-initramfs -u
	fi	
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


